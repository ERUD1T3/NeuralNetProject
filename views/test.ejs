<!-- main project page -->

<div class="main-container">
    <form action="/test" method="post">
        <h1><a href="/" style="text-decoration: none;">Testing Phase</a></h1>

        <h3>Input Matrix</h3>
        <div class="grid-container">
            <div class="input-container">
                <table class="grid">
                    <tr>
                        <td> </td>
                        <td> 0 </td>
                        <td> 1 </td>
                        <td> 2 </td>
                        <td> 3 </td>
                        <td> 4 </td>
                        <td> 5 </td>
                        <td> 6 </td>
                    </tr>

                    <% for(let i = 0; i < 9; ++i) { %>
                    <tr>
                        <td class="grid"> <%= i %> </td>

                        <% for(let j = 0; j < 7; ++j) { %>
                        <td class="grid">
                            <div class="mdc-form-field">
                                <div class="mdc-checkbox">
                                    <input type="checkbox" class="mdc-checkbox__native-control" name="input"
                                        value="<%= i * 7 + j %>" />
                                    <div class="mdc-checkbox__background">
                                        <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
                                            <path class="mdc-checkbox__checkmark-path" fill="none"
                                                d="M1.73,12.91 8.1,19.28 22.79,4.59" />
                                        </svg>
                                        <div class="mdc-checkbox__mixedmark"></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <% } %>
                    </tr>
                    <% } %>

                </table>
            </div>
        </div>


        <br>
        <h3>
            <i>Letter</i>
            
        </h3>
        <h1 class="text-danger"><%= prediction %></h1>

        <br>
        <button class="mdc-button mdc-button" type="reset">
            <span class="mdc-button__label">Clear Input</span>
        </button>
        <button class=" mdc-button mdc-button--unelevated" type="submit">
            <span class="mdc-button__label">Predict Letter</span>
        </button>

        <br>
        <a href="/">
            <h1><button class="mdc-icon-button material-icons">arrow_back</button>Go Train</h1>
        </a>
        
    </form>
</div>